{
  "name": "lutov-net",
  "description": "Vladimir Liutov's personal blog",
  "version": "1.0.0",
  "author": "Vladimir Liutov <vs@lutov.net>",
  "keywords": [
    "gatsby"
  ],
  "license": "AGPLv3",
  "main": "n/a",
  "scripts": {
    "build": "gatsby build",
    "clean": "rimraf public",
    "format": "standardx --fix **/*.{js,jsx,ts,tsx}",
    "lint": "standardx **/*.{js,jsx,ts,tsx}",
    "start": "gatsby develop",
    "test": "npm run type-check && npm run lint && jest",
    "type-check": "tsc --pretty --noEmit"
  },
  "engines": {
    "node": ">=12.18.0",
    "npm": ">=6.14.5"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.16",
    "@mdx-js/react": "^1.6.16",
    "babel-plugin-styled-components": "^1.11.1",
    "classnames": "^2.2.6",
    "gatsby": "^2.24.26",
    "gatsby-image": "^2.4.14",
    "gatsby-plugin-canonical-urls": "^2.3.10",
    "gatsby-plugin-mdx": "^1.2.34",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-plugin-sharp": "^2.6.24",
    "gatsby-plugin-typescript": "^2.4.16",
    "gatsby-remark-copy-linked-files": "^2.3.12",
    "gatsby-remark-images": "^3.3.24",
    "gatsby-remark-prismjs": "^3.5.10",
    "gatsby-remark-responsive-iframe": "^2.4.12",
    "gatsby-remark-smartypants": "^2.3.10",
    "gatsby-source-filesystem": "^2.3.23",
    "gatsby-transformer-json": "^2.4.11",
    "gatsby-transformer-sharp": "^2.5.12",
    "normalize.css": "^8.0.1",
    "prism-themes": "^1.4.0",
    "prismjs": "^1.20.0",
    "react": "^16.13.1",
    "react-bytesize-icons": "^0.12.2",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.44",
    "@types/react-bytesize-icons": "^0.12.0",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint-plugin-jest": "^23.20.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-environment-enzyme": "^7.1.2",
    "jest-enzyme": "^7.1.2",
    "rimraf": "^3.0.2",
    "standardx": "^5.0.0",
    "ts-jest": "^26.1.4"
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "ignore": [
      "/out",
      "/.next",
      "/node_modules"
    ]
  },
  "eslintConfig": {
    "rules": {
      "quotes": [
        "error",
        "double",
        {
          "avoidEscape": true
        }
      ],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run build"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "target": "ES2019",
          "lib": [
            "ES2019"
          ]
        }
      }
    },
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/public/",
      "/templates/",
      "/.cache"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "setupFilesAfterEnv": [
      "jest-enzyme"
    ],
    "testEnvironment": "enzyme"
  }
}
